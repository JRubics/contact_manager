<p id="notice"><%= notice %></p>

<p>
  <strong>First name:</strong>
  <%= @person.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @person.last_name %>
</p>
<p>Phone</p>
<ul>
  <% @person.phone_numbers.each do |phone| %>
    <li><%= phone.number %> <%= link_to('edit', edit_phone_number_path(phone)) %>
      
    </li><%= link_to('delete', phone_number_path(phone), :method => "delete") %>

  <% end %>
</ul>
<p>Mail</p>
<ul>
  <% @person.email_adresses.each do |a| %>
    <li><%= a.adress %>   <%= link_to('edit', edit_email_adress_path(a)) %>    
    </li><%= link_to('delete', email_adress_path(a), :method => "delete") %>
  <% end %>
</ul>


<%= link_to 'Add phone number', new_phone_number_path(person_id: @person.id) %> |
<%= link_to 'Add email adress', new_email_adress_path(person_id: @person.id) %> |
<%= link_to 'Edit', edit_person_path(@person) %> |
<%= link_to 'Back', people_path %>
