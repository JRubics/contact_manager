<p id="notice"><%= notice %></p>

<h1>Email Adresses</h1>

<table>
  <thead>
    <tr>
      <th>Adress</th>
      <th>Person</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @email_adresses.each do |email_adress| %>
      <tr>
        <td><%= email_adress.adress %></td>
        <td><%= email_adress.person_id %></td>
        <td><%= link_to 'Show', email_adress %></td>
        <td><%= link_to 'Edit', edit_email_adress_path(email_adress) %></td>
        <td><%= link_to 'Destroy', email_adress, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

